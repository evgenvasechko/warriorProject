*,
*::before,
*::after
  box-sizing: border-box

html
  font-size: 62.5%

body
  /* code your own styles here */
  font: 1.4rem/1.5rem Helvetica
  font-family: 'Proxima Nova'

a
  color: #444444
  &:visited
    color: #444444
  text-decoration: none

@media screen and (max-width: 767px)
  .page__content
    overflow: hidden

.container
  max-width: 1366px;
  width: 100%;
  margin: 0 auto;
  padding: 0 3rem 0 3rem

.button
  color: #DCDCDC;
  background: #3348E6;
  padding: 1rem 2rem;
  cursor: pointer
  border: none
  outline: none
  transition: .6s all ease-out
  &:hover
    color: #3348E6
    background: #DCDCDC

.hero-sections
  height: 90vh;
  background-size: cover;
  background-position: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative
  z-index: 1
  &:after
    content: ''
    display: block
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    background: rgba(0,0,0,.33)
    z-index: 2
  & .hero-container
    z-index: 3
    width: 100%
    max-width: 1200px
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    @media screen and (max-width: 767px)
      flex-direction: column
    & .page-title
      flex: 1;
      text-align: center;
      color: rgba(255,255,255,0.8);
      text-decoration: underline;
      line-height: 1.4
      font-size: 3.5rem;
      font-family: 'ProximaNova-Light';
      font-weight: 100;
      position: relative
      height: 40vh
      @media screen and (max-width: 767px)
        height: auto 
        margin: 1rem 3rem
        //padding-top: 10vh
      &:after
        content: ''
        display: block
        position: absolute
        height: 50vh
        width: .7rem
        background #D8D8D8
        right: 0
        top: -3rem
        @media screen and (max-width: 767px)
          display: none
    & .page-about
      flex: 4
      display: flex;
      flex-direction: column;
      justify-content: space-around;
      align-items: flex-start;
      font-size: 1.7rem;
      line-height: 1.2
      height: 50vh;
      margin: 0 3rem;
      @media screen and (max-width: 767px)
        font-size: 1.6rem
      &__text
        color: #fff;
      &__filter
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        @media screen and (max-width: 767px)
          flex-direction: column;
          align-items: center;
          margin-top: 1rem
        & .filter-unit
          color: #fff;
          background: #3348E6
          padding: 1rem 3rem;
          cursor: pointer
          &_active,
          &:hover
            background: #fff;
            color: #3348E6
            transition .5s all ease-out
          @media screen and (max-width: 767px)
            margin: .5rem;
            flex: 1;
            text-align: center;
            width: 200px;
            max-width: 200px;
.close-modal
  width: 25px;
  height: 25px;
  right: 1rem;
  top: 1rem;
  position: absolute;
  cursor: pointer;
  z-index: 3
  font-size: 4rem;
.close
  width: 25px;
  height: 25px;
  right: -1rem;
  top: -3rem;
  position: absolute;
  cursor: pointer;
  z-index: 3
  font-size: 4rem;


.tech-works 
