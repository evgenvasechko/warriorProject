.call-us-button
    position: fixed;
    right: 3rem;
    bottom: 2.7rem;
    z-index: 10;
    border: none;
    outline: none;
    cursor: pointer

.call-us-form
    display: none;
    position: absolute;
    z-index: 12;
    width: 40%;
    left: 30%;
    background: rgba(255,255,255, 1);
    padding: 2rem;
    box-shadow: 0px 0px 600px 400px rgba(0,0,0,0.6);
    @media screen and (max-width 767px)
        width: 70%
        left: 15%
    & input
        background: rgba(51, 72, 230, .5);
        border: none;
        padding: 1rem;
        outline: none;
        color: #2f2f2f
        z-index: 1
    & label 
        position: absolute;
        top: 50%;
        line-height: 0;
        left: 1rem;
        transition: .5s all ease
        color: rgba(0, 0, 0, 0.7);
        &.focus
            top: -1rem
    &__field
        margin: 3rem 0;
        display: flex;
        flex-direction: column;
        color: #fff;
        position: relative;
    &:before
        position: absolute
        background: rgba(0,0,0, .5)
        height: 100vh
        width: 100%
        top: 0
        left: 0
        right: 0
        bottom: 0
        z-index: 11

.call-us
    &__head
        font-size: 1.6rem;
        line-height: 1;
        text-align: center;
        color: #2f2f2f;
        position: relative