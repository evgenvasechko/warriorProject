.afford
    background: url('../images/hero-third.png')
    background-size: cover
    &__header
        color: #BDBDBD
        text-align: center
        line-height: 4
    &__menu
        display: flex
        flex-direction: row
        justify-content: space-between
        padding: 0 0 5rem 0
    &-categories
        background: rgba(216,216,216,.61)
        list-style: none
        margin: 0 1rem 0 0
        padding: 0
        text-align: center
        flex: 1
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        &__unit
            padding: 2rem 4rem
            font-size: 2rem
            color: #323232
            border-bottom: solid 1px rgba(50,50,50,.2)
            cursor: pointer
            &:last-child
                border: none
    &__subcategories
        background: rgba(216,216,216,.61)
        flex: 2
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        & ul
            flex: 2
            list-style: none;
            margin: 2rem;
            padding: 0;
            font-size: 2rem;
            line-height: 1.6;
            text-decoration: underline;
        & img
            flex: 1;
            height: 270px;
            width: auto;
            padding: 1rem

.active
    background: #3348E6
    color: #bdbdbd
.fence, .lamps, .complex, .bronze 
    display: none