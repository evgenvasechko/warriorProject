.about-us-hero
    background: url('../images/hero-about-us.jpeg')
    background-repeat: no-repeat
    background-size: cover;
    background-position: 50%;


.card
    display: flex
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    line-height: 1;
    margin: 4rem 0 4rem 0
    @media screen and (max-width: 767px)
        flex-direction: column
    &__image
        flex: 2
        position: relative
        @media screen and (max-width: 767px)
            width: 100%
        & img
            width: 100%
            height: auto
    &__information
        color: #616161
        flex: 1
        margin: 2rem
    &__header
        font-size: 4rem
        margin: 2rem
    &__text
        font-size: 1.8rem
        line-height: 1.3
.reverse
    flex-direction: row-reverse
    @media screen and (max-width: 767px)
        flex-direction: column