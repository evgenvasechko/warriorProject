.categories-preview
    &-container
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-between;
        margin: 5rem auto;
    &-unit
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        &__image
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            flex: 2;
            padding: 2rem 0;
            & img
                width: 100%;
        &__info
            background: #f9f9f9;
            text-align: center;
            padding: 2rem;
            color: #2F2F2F;
            font-weight: 100;
            flex: 1;
        &__header
            text-decoration: underline;
            font-family: 'ProximaNova-Light';
            font-weight: 100;
    &__unit_reverse
        flex-direction: column-reverse;
        margin: 0 2rem;