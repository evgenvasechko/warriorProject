.categories-preview
    &-container
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-between;
        margin: 5rem auto;
        @media screen and (max-width 767px)
            flex-direction: column
    &-unit
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        max-width: 30%
        @media screen and (max-width 767px)
            flex-direction: column-reverse
            align-items: stretch
            max-width: 100%
            margin: 0 auto
        &__image
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            flex: 2;
            padding: 2rem 0;
            @media screen and (max-width 767px)
                padding: 0
            & img
                width: 100%;
        &__info
            background: #f9f9f9;
            text-align: center;
            padding: 2rem;
            color: #2F2F2F;
            font-weight: 100;
            flex: 1;
        &__header
            text-decoration: underline;
            font-family: 'ProximaNova-Light';
            font-weight: 100;
            @media screen and (max-width 767px)
                font-size: 3rem
        &__describe
            @media screen and (max-width 767px)
                font-size: 1.6rem
                line-height: 1.2
    &__unit_reverse
        flex-direction: column-reverse;
        margin: 0 2rem;
        @media screen and (max-width 767px)
            margin: 2rem auto