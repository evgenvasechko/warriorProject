.sell-unit
    position: absolute;
    display: block;
    flex-direction: column;
    width: 70%
    min-width: 480px
    left: 15%
    background: #fff
    z-index: 12
    padding: 2rem
    box-shadow: 0px 0px 600px 400px rgba(0,0,0,0.6);
    & .close
        top: 0.5rem
        right: 0.5rem
    &__image
        position: relative
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        & span.previous, span.next
            border: solid transparent 2rem
            cursor: pointer
            z-index: 1
        & span.previous
            border-right: solid #2849b3 2rem
        & span.next
            border-left: solid #2849b3 2rem
        & img
            width: 90%
            margin: 0 5%
            transition: all 5s ease
    &__header
        text-align: center
    &__info
        display: flex
        flex-direction: row
        justify-content: space-between
        align-items: flex-start
        &_col
            flex: 1
            padding: 1rem
            font-size: 1.5rem
            line-height: 1.2
            &:nth-child(1)
                font-size: 1.7rem
                line-height: 1.5
                font-weight: 600
                border-right: solid 1px #888
    &__describe
        margin: 0

.carousel
    position: relative
    display: flex;
    flex-direction: row;
    width: 100%;
    overflow: hidden;
    height: auto;
    justify-content: start;
    align-items: flex-start;
    margin-left: 0;