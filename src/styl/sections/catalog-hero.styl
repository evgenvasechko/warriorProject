.catalog-hero
    background: url(../images/catalog-hero.png);
    height: 90vh;
    background-size: cover;
    background-position: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative
    z-index: 1
    &:after
        content: ''
        display: block
        position: absolute
        top: 0
        right: 0
        bottom: 0
        left: 0
        background: rgba(0,0,0,.33)
        z-index: 2
    & .hero-container
        z-index: 3
        width: 100%
        max-width: 1200px
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        & .page-title
            flex: 1;
            text-align: center;
            color: rgba(255,255,255,0.8);
            text-decoration: underline;
            font-size: 3.5rem;
            font-family: 'ProximaNova-Light';
            font-weight: 100;
            position: relative
            height: 40vh
            &:after
                content: ''
                display: block
                position: absolute
                height: 50vh
                width: .7rem
                background #D8D8D8
                right: 0
                top: -3rem
        & .page-about
            flex: 4
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            align-items: flex-start;
            font-size: 1.7rem;
            line-height: 1.2
            height: 50vh;
            margin: 0 3rem;
            &__text
                color: #fff;
            &__filter
                width: 100%;
                display: flex;
                flex-direction: row;
                justify-content: space-between;
                & .filter-unit
                    color: #fff;
                    background: #3348E6
                    padding: 1rem 3rem;
                    &_active,
                    &:hover
                        background: #fff;
                        color: #3348E6
                        transition .3s all ease