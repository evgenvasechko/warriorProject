.main-advantages
    background: url('../images/hero-second.png');
    height: 100vh;
    background-position: 50%;
    background-size: cover;
    @media screen and (max-width: 767px)
        height: auto
    &__header
        text-align: center;
        color: #2f2f2f;
        padding: 7rem 0;
        margin: 0;
    &__list
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        flex-wrap: wrap;
        @media screen and (max-width: 767px)
            flex-direction: column
            align-items: center
            padding-bottom: 1rem
    &__unit
        display: flex;
        background: rgba(255,255,255,0.62);
        flex-direction: column;
        flex: 1;
        margin-left: 1rem;
        justify-content: space-around;
        align-items: center;
        width: 30%;
        height: 65vh;
        &:nth-child(1)
            margin-left: 0;
        @media screen and (max-width: 767px)
            margin-top: 1rem
            margin-left: 0
            width: 60%
            height: auto
    &-unit 
        &__icon
            display: flex;
            flex: 5;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: #444444;
            @media screen and (max-width: 767px)
                margin-top: 1rem
            & img 
                width: 50%;
                @media screen and (max-width: 767px)
                    width: 35%
        &__header
            font-family: 'ProximaNova-Light';
            font-weight: 100;
            flex: 1;
        &__description
            font-weight: lighter;
            text-align: center;
            padding-bottom: 1rem;
            font-size: 1.5rem;
            line-height: 1.3;
            flex: 1;