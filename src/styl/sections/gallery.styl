.gallery-hero
    background-image: url('../images/gallery-hero.png')

.gallery-images
    &__list
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        flex-wrap: wrap;
        margin: 3rem 0;

.gallery-image
    border-style: none;
    flex: 1;
    height: 180px;
    margin: 1rem;

.gallery-modal
    display: none;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 11;
    background: rgba(0,0,0, .7);
    height: 100%;
    padding-top: 100px
    &__close
        right: 0;
        top: 0rem;
        position: fixed;
        font-size: 8rem;
        color: #fff;
        width: 6rem;
        height: 6rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        cursor: pointer
        &:hover
            color: rgba(255, 255, 255, .9)
            transition .3s all ease
    &__content
        margin: auto;
        display: block;
        width: 80%;
        max-width: 700px;

.gallery-modal__content { 
  animation-name: zoom;
  animation-duration: 0.6s;
}

@keyframes zoom {
  from {transform:scale(0)} 
  to {transform:scale(1)}
}