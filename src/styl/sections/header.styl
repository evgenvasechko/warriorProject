.header
    position: fixed;
    top: 0;
    display: block;
    width: 100%;
    background: linear-gradient(-180deg, #FFFFFF 0%, rgba(255,255,255,0.60) 58%, rgba(255,255,255,0.00) 100%);
    height: 8vh;
    z-index: 9;
    transition: .5s linear
    @media screen and (max-width: 767px)
        display: none
    &:hover
        background: #fff
    &-menu
        margin: 0 auto 0 auto
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        list-style: none;
        padding: 0;
        max-width: 1366px;
        font-size: 1.6rem
        color: #444444
        @media screen and (max-width: 767px)
            margin: 10vh auto 0 auto
        &__unit
            padding: 1.5rem 2rem;
    &-mobile
        display: none
        @media screen and (max-width: 767px)
            display: block;
            height: 10vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: #fff;
            z-index: 2;
        & .header-menu
            display: none
            &__unit.mobile-catalog
                list-style: none
                padding: 0.5rem 0 1rem 0;
                & .header-submenu__unit
                    padding: 1.5rem 2rem
                    display: none
                    transition: all 5s linear
                    &:nth-child(1)
                        padding: 2rem 0rem 1rem 0rem;
        & .header-menu_active
            display: block !important
            text-align: center;
            background: rgba(255,255,255, .9);
        &:before
            content: 'Heartstone.by'
            display: block
            position: absolute
            left: 2rem
            top: 3rem;
            font-size: 3rem;
        & .hamburger
            position: absolute;
            top: 0;
            right: 0;
            outline: none;