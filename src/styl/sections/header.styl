.header
    position: fixed;
    top: 0;
    display: block;
    width: 100%;
    background: linear-gradient(-180deg, #FFFFFF 0%, rgba(255,255,255,0.60) 58%, rgba(255,255,255,0.00) 100%);
    height: 10vh;
    z-index: 9;
    transition: .5s linear
    @media screen and (max-width: 767px)
        display: none
    &:hover
        background: #fff
    &-menu
        margin: .5rem auto
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        list-style: none;
        padding: 0;
        max-width: 960px;
        font-size: 1.6rem
        color: #444444
        &__unit
            padding: 1.5rem 2rem;
    &-submenu
        display: none;
        list-style: none;
        flex-direction: row;
        max-width: 960px
        justify-content: space-between;
        //background: #3348e6;
        top: 4rem;
        padding: 0
        margin: 0.5rem auto
        transition: all .5s linear
        &__unit
            padding: 2rem 0
            & a
                font-size: 1.6rem
                padding: 2rem
    &-mobile
        @media screen and (max-width: 767px)
            display: block;
            height: 10vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: #fff;
            z-index: 1;
        & .header-menu
            display: none
            &__unit.mobile-catalog
                list-style: none
                padding: 0.5rem 0 1rem 0;
                & .header-submenu__unit
                    padding: 1.5rem 2rem
                    display: none
                    transition: all 5s linear
                    &:nth-child(1)
                        padding: 2rem 0rem 1rem 0rem;
        & .header-menu_active
            display: block !important
            text-align: center;
            background: rgba(255,255,255, .9);
        &:before
            content: 'domain-name.by'
            display: block
            position: absolute
            left: 2rem
            top: 2.4rem;
            font-size: 2.6rem;
        & .hamburger
            position: relative;
            top: .5rem;
            left: 90%;
            outline: none;