.reviews
    &__header
        text-align: center
        margin: 4rem 0 5rem 0
    &__section
        position: relative
        display: block
        //height: 70vh
    &__block
        display: none
        transition: all ease 2s
        @media screen and (max-width: 767px)
            flex-direction: column
.review
    &__unit
        color: #2f2f2f
        max-width: 48%
        min-width: 48%
        flex: 1
        margin-right: 3rem
        @media screen and (max-width: 767px)
            width: 100%
            max-width: 100%
    &__author
        display: flex
        flex-direction: row
        justify-content: flex-start 
        align-items: center
        margin-bottom: 3rem
        @media screen and (max-width: 767px)
            margin-bottom: 1.5rem
        &_ico
            font-size: 6rem
            margin-right: 2rem
            @media screen and (max-width: 767px)
                font-size: 4rem
        &_name
            font-size: 3rem
            @media screen and (max-width: 767px)
                font-size: 2.5rem
    &__text
        font-size: 2rem
        line-height: 1.3
        margin-bottom: 3rem
        @media screen and (max-width: 767px)
            font-size: 1.6rem