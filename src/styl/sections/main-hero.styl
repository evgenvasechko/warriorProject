.main-hero
    background: url('../images/hero-main.jpg')
    background-size: cover;
    background-position: 50%;
    position: relative
    height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
    &-desc
        background: transparent;
        overflow: hidden;
        width: 35%;
        font-size: 2.2rem;
        line-height: 1;
        color: #C8C8C8;
        text-align: right;
        margin-right: 5rem;
        position: relative
        h1
            color: #ffffff
        @media screen and (max-width 767px)
            width: 90%
    &-logo
        width: 100%
        overflow: hidden;
        position: relative
        margin: -2rem 0 -3rem 0;
        @media screen and (max-width 767px)
            margin: 3rem 0 0 0
        &__image
            height: 20vh;
            margin-left: 15rem;
    &-contacts 
        text-align: right;
        margin-right: 5rem;
        color: #001BE3
        font-size: 2.2rem
        line-height: 1
        font-weight: 600
        position: relative
        text-shadow: 0px 0px 20px #FFFFFF